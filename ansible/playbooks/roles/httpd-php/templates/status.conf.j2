<VirtualHost 127.0.0.1:80>

DocumentRoot /var/www/status/

<Directory "/var/www/status/">
    Order deny,allow
    Deny from all
    Allow from 127.0.0.1
</Directory>

<Location /server-status>
    SetHandler server-status
    Order deny,allow
    Deny from all
    Allow from 127.0.0.1
</Location>

<Location /server-info>
    SetHandler server-info
    Order deny,allow
    Deny from all
    Allow from 127.0.0.1
</Location>

</VirtualHost>
